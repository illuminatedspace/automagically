{
  "rules": {
    "photos": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$userId": {
        ".read": "$userId === auth.uid",
        ".write": "$userId === auth.uid"
      }
    },
    "tripActions": {
      ".read": "auth != null",
      ".write": "auth != null",
